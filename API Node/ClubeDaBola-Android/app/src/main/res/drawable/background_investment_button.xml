<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="200"
    android:exitFadeDuration="200">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange_dark"/>
            <corners android:bottomLeftRadius="3dp" android:topLeftRadius="3dp"/>
            <gradient
                android:angle="0"
                android:endColor="@color/orange_clear"
                android:startColor="@color/orange_dark"
                />


        </shape>

    </item>

    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="3dp" android:topLeftRadius="3dp"/>

            <solid android:color="@color/orange_dark"/>
            <gradient
                android:angle="0"
                android:endColor="@color/orange_clear"
                android:startColor="@color/orange_dark"
                />
        </shape>
    </item>

    <item>
        <layer-list>
            <item android:state_activated="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white_FFFFFF"/>
                    <corners android:bottomLeftRadius="3dp" android:topLeftRadius="3dp"/>
                    <stroke android:width="2dip" android:color="@color/orange_clear" />

                </shape>
            </item>


        </layer-list>

    </item>




</selector>