<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_FFFFFF"
    android:orientation="vertical"
    tools:context="cdbol.br.com.clubedabola.screens.cartao.AdicionarCartaoActivity">

    <include
        android:id="@+id/toollbar_cadastro"
        layout="@layout/toollbar_cadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tv_credit_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_16_dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textColorHint="@color/gray_828282"
                    app:passwordToggleTint="@color/gray_828282">

                    <EditText
                        android:id="@+id/edt_numero_cartao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin_5_dp"
                        android:layout_marginTop="@dimen/default_margin_30_dp"
                        android:layout_marginRight="@dimen/default_margin_5_dp"
                        android:layout_marginBottom="@dimen/default_margin_8_dp"
                        android:background="@null"
                        android:hint="Número Cartão"
                        android:inputType="numberDecimal" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white_ice" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tv_deadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_16_dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textColorHint="@color/gray_828282"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/gray_828282">

                    <EditText
                        android:id="@+id/edt_vencimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin_5_dp"
                        android:layout_marginTop="@dimen/default_margin_30_dp"
                        android:layout_marginRight="@dimen/default_margin_5_dp"
                        android:layout_marginBottom="@dimen/default_margin_8_dp"
                        android:background="@null"
                        android:hint="Vencimento"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white_ice" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_8_dp"
                android:layout_weight="2"
                android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ip_cvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_16_dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColorHint="@color/gray_828282"
                app:passwordToggleTint="@color/gray_828282">

                <EditText
                    android:id="@+id/edt_cvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_5_dp"
                    android:layout_marginTop="@dimen/default_margin_30_dp"
                    android:layout_marginRight="@dimen/default_margin_5_dp"
                    android:layout_marginBottom="@dimen/default_margin_8_dp"
                    android:background="@null"
                    android:hint="CVV"
                    android:inputType="number"
                    android:maxLength="3" />


            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white_ice" />

            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_16_dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColorHint="@color/gray_828282"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/gray_828282">

                <EditText
                    android:id="@+id/edt_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_5_dp"
                    android:layout_marginTop="@dimen/default_margin_30_dp"
                    android:layout_marginRight="@dimen/default_margin_5_dp"
                    android:layout_marginBottom="@dimen/default_margin_8_dp"
                    android:background="@null"
                    android:hint="Nome completo"
                    android:inputType="textAutoComplete" />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white_ice" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_16_dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textColorHint="@color/gray_828282"
                    app:passwordToggleTint="@color/gray_828282">

                    <EditText
                        android:id="@+id/edt_birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin_5_dp"
                        android:layout_marginTop="@dimen/default_margin_30_dp"
                        android:layout_marginRight="@dimen/default_margin_5_dp"
                        android:layout_marginBottom="@dimen/default_margin_8_dp"
                        android:background="@null"
                        android:hint="Data de nascimento"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white_ice" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_16_dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textColorHint="@color/gray_828282"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/gray_828282">

                    <EditText
                        android:id="@+id/edt_cpf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin_5_dp"
                        android:layout_marginTop="@dimen/default_margin_30_dp"
                        android:layout_marginRight="@dimen/default_margin_5_dp"
                        android:layout_marginBottom="@dimen/default_margin_8_dp"
                        android:background="@null"
                        android:hint="CPF"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white_ice" />

            </LinearLayout>

            <include layout="@layout/include_customer_phone"/>
            <include layout="@layout/include_customer_address"/>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
