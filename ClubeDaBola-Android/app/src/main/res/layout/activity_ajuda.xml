<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="cdbol.br.com.clubedabola.screens.ajuda.AjudaActivity">

    <include layout="@layout/toollbar"
        android:id="@+id/toolbar"
        />

    <RelativeLayout
        android:id="@+id/relativ_fale_conosco"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_fale_conosco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Fale Conosco"
        android:textSize="18sp"

         />

        <ImageView
            android:id="@+id/img_fale_conosco"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/default_margin_10_dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/txt_fale_conosco"
            app:srcCompat="@mipmap/ic_seta_direita" />
    </RelativeLayout>


    <View
        android:id="@+id/custom_view_indication_site"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray_ligth_color_B7"
        android:visibility="visible"
        android:layout_below="@+id/relativ_fale_conosco" />

    <RelativeLayout
        android:id="@+id/relative_visite_site"
        android:layout_marginBottom="@dimen/default_margin_20_dp"
        android:layout_marginTop="@dimen/default_margin_5_dp"
        android:layout_below="@+id/custom_view_indication_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_visite_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Visite nosso Site"
        android:textSize="18sp"
         />

    <ImageView
        android:id="@+id/img_visite_site"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/default_margin_10_dp"
        android:layout_alignRight="@+id/txt_visite_site"
        app:srcCompat="@mipmap/ic_seta_direita" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/relative_visite_site"
        android:background="@color/white_FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>


</RelativeLayout>
