<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange_dark</item>
        <item name="colorPrimaryDark">@color/orange_clear</item>
        <item name="colorAccent">@color/orange_FFA500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/gray_828282</item>
        <item name="colorControlActivated">@color/gray_828282</item>
        <item name="colorControlHighlight">@color/gray_828282</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/gray_828282</item>
        <item name="colorControlActivated">@color/gray_828282</item>
        <item name="colorControlHighlight">@color/gray_828282</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@color/gray_828282</item>
        <item name="colorControlActivated">@color/gray_828282</item>
        <item name="colorControlHighlight">@color/gray_828282</item>
    </style>

    <style name="label">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editText">
        <item name="android:textColorHint">@color/gray_A9A9A9</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gray_A9A9A9</item>
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/gray_A9A9A9</item>
        <item name="colorControlNormal">@color/gray_A9A9A9</item>
        <item name="colorControlActivated">@color/gray_A9A9A9</item>
    </style>

        <style name="edt_text_white" parent="@android:style/Widget.EditText">
            <item name="android:textColor">@color/white_FFFFFF</item>
        </style>

    <style name="cb_button">
        <item name="android:textSize">@dimen/default_text_16_sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
    </style>
    <style name="cb_button_profile" parent="cb_button">
        <item name="android:background">@drawable/shape_button_rounded_transparent</item>

    </style>
    <style name="style_button">
        <item name="android:textSize">@dimen/default_text_16_sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <item name="android:layout_marginTop">@dimen/default_margin_10_dp</item>
        <item name="android:background">@drawable/ripple_button</item>
    </style>

    <style name="style_button_status">

        <item name="android:textSize">@dimen/default_text_16_sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <item name="android:layout_marginTop">@dimen/default_margin_10_dp</item>
        <item name="android:background">@drawable/ripple_button</item>
    </style>

    <style name="style_button_transparent">
        <item name="android:textSize">@dimen/default_text_16_sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_FFFFFF</item>
        <item name="android:layout_marginTop">@dimen/default_margin_10_dp</item>
        <item name="android:background">@drawable/ripple_button_transparent</item>
    </style>

    <style name="cb_button_hired" >
        <item name="android:background">@drawable/shape_button_border_orange</item>
        <item name="android:textSize">@dimen/default_text_16_sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/orange_dark</item>

    </style>

    <style name="cb_button_hired_orange" parent="cb_button">
        <item name="android:background">@drawable/shape_button_orange</item>

    </style>


    <style
        name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <style
        name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar"
        />
    <style name="option_investment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_text_16_sp</item>
        <item name="android:background">@drawable/background_investment_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/shape_texto_radio</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="option_rating">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_text_16_sp</item>
        <item name="android:background">@drawable/background_rating_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/shape_rating_radio</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="option_rigth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_text_16_sp</item>
        <item name="android:background">@drawable/background_radio_button_rigth</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/shape_texto_radio</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="label_contratacao">
        <item name="android:textColor">@drawable/shape_texto_label</item>
        <item name="android:textSize">@dimen/default_text_16_sp</item>
    </style>

    <style name="label_conclur">
        <item name="android:textColor">@drawable/shape_texto_label</item>
        <item name="android:textSize">@dimen/default_text_16_sp</item>
    </style>
    <style name="SwitchCompatStyle" >
        <item name="android:thumb">@drawable/seekbar_thumb</item>

    </style>

</resources>
